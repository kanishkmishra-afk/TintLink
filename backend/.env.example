# MongoDB Connection URI
# Local: mongodb://localhost:27017/tinylink
# MongoDB Atlas (Cloud): mongodb+srv://<username>:<password>@<cluster>.mongodb.net/tinylink?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/tinylink

# Server Port
PORT=3000

# Environment Mode
NODE_ENV=development

# Base URL (for generating short links)
BASE_URL=http://localhost:3000

# CORS Origin (frontend URL)
CORS_ORIGIN=http://localhost:5173

# API Version
API_VERSION=1.0
